<%- include('bootheader') -%>

<h1>Happy Every Day <span class="badge bg-secondary">Games!</span></h1>

   <form method="post" action="/games/add_comment">
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Name of The Game:</label>
    <div class="col-sm-10">
      <input type="text" name="gamename" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">The score you got!</label>
    <div class="col-sm-10">
      <input type="text" name="score" class="form-control" id="inputPassword3">
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword2" class="col-sm-2 col-form-label">Short_Comment about this game:</label>
    <div class="col-sm-10">
      <input type="text" name="shortDescription"class="form-control" id="inputPassword2">
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Date of today:</label>
    <div class="col-sm-10">
      <input type="date" name="date"class="form-control" id="inputPassword3">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Add Your Comments</button>
</form>
<form method="post" action="/games/delete">
<button type="submit" class="btn btn-outline-danger">Clear Data</button>
</form>
<table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Game_Name</th>
              <th>Score</th>
              <th>Date</th>
              <th>shortDescription<th>
            </tr>
          </thead>
          <tbody>
                  <% g.forEach(g => { %>
                    <tr>
                      <td><%= g.gamename %></td>
                      <td><%= g.score %></td>
                      <td><%= g.date %></td>
                      <td><%= g.shortDescription %></td>
                      </tr>
                  <% }) %>
              </tbody>
        </table>

  <%- include('bootfooter') -%>
