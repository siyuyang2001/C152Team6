<%- include('bootheader') -%>
<link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
<meta charset=utf-8 />
<style>
  article, aside, figure, footer, header, hgroup,
  menu, nav, section { display: block; }
</style>
<div class="badge badge-primary text-wrap" style="width: 6rem;">
  <h1>Abs Page! Be Healthy
</h1>
</div>
   <% l.forEach(l => { %>
     <div class="row bg-warning">
       <div class="col">
         <p>
Image of <%= l.exercise%>
           </p><br>
           <img src=<%= l.localPicture%> >
         </div>

         <div class="col bg-danger">
           <p>
Short Description of <%= l.exercise%>
             </p>

             <p>
<%= l.shortDescription%>
               </p>
           </div>
      </div>
      <br>
                  <% }) %>
   <form method="post" action="/fitness/add_exercise">
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Name of The Exercise:</label>
    <div class="col-sm-10">
      <input type="text" name="exercise" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">URL_link</label>
    <div class="col-sm-10">
      <input type="text" name="URL" class="form-control" id="inputPassword3">
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword2" class="col-sm-2 col-form-label">Short_Description of this Exercise:</label>
    <div class="col-sm-10">
      <input type="text" name="shortDescription"class="form-control" id="inputPassword2">
    </div>
  </div>
  <select name="part" id="part">
   <option value="abs">
  Abs
     </option>
    </select><br>
  <button type="submit" class="btn btn-primary">Add This Exercise</button>
</form>

  <%- include('bootfooter') -%>
